<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--Loan Tree view-->
    <record id="hr_advance_loan_tree_view" model="ir.ui.view">
        <field name="name">hr.advance.loan.tree</field>
        <field name="model">hr.advance.loan</field>
        <field name="arch" type="xml">
            <tree string="Advance Loan Requests">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="loan_amount"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="hr_advance_salary_tree_view" model="ir.ui.view">
        <field name="name">hr.advance.salary.tree</field>
        <field name="model">hr.advance.loan</field>
        <field name="arch" type="xml">
            <tree string="Advance Salary Requests">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="adv_sal_amount"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!--Loan Form view-->
    <record id="hr_advance_loan_form_view" model="ir.ui.view">
        <field name="name">hr.advance.loan.form</field>
        <field name="model">hr.advance.loan</field>
        <field name="arch" type="xml">
            <form string="Advance Loan Request">
                <header>
                    <button name="compute_installment" type="object" string="Compute Installment" class="oe_highlight"
                            attrs="{'invisible':['|', ('state','in',('approve', 'refuse')), ('type','!=','loan')]}"/>
                    <button name="action_submit" type="object" string="Submit" states="draft" class="oe_highlight"/>
                    <button name="action_cancel" type="object" string="Cancel" states="approve"/>
<!--                    <button name="reset_to_draft" type="object" string="Reset To Draft" states="approve"/>-->
                    <button name="action_approve" type="object" string="Approve" states="waiting_approval_1"
                            class="oe_highlight" groups="hr.group_hr_manager,hr.group_hr_user"/>
                    <button name="action_refuse" type="object" string="Refuse" states="draft,waiting_approval_1"
                            class="oe_highlight" groups="hr.group_hr_manager,hr.group_hr_user"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,waiting_approval_1,approve"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group col="4">
                        <field name="type" widget="radio" options="{'horizontal': true}" invisible="1"/>
                        <field name="employee_id" attrs="{'readonly':[('state','=','approve')]}"/>
                        <field name="date"/>
                        <field name="department_id"/>
                        <field name="job_position"/>
                        <field name="loan_amount"
                               attrs="{'readonly':[('state','=','approve')], 'invisible':[('type','!=','loan')], 'required':[('type','=','loan')]}"/>
                        <field name="adv_sal_amount"
                               attrs="{'readonly':[('state','=','approve')], 'invisible':[('type','!=','ad_sal')], 'required':[('type','=','ad_sal')]}"/>
                        <field name="installment"
                               attrs="{'readonly':[('state','=','approve')], 'invisible':[('type','!=','loan')], 'required':[('type','=','loan')]}"/>
                        <field name="payment_date"
                               attrs="{'readonly':[('state','=','approve')]}"/>
                        <field name="month"/>
                        <field name="year"/>
                        <field name="advance_paid"/>
                        <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                        <field name="currency_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                    </group>
                    <notebook>
                        <page string="Installments" attrs="{'invisible':[('type','!=','loan')]}">
                            <field name="loan_lines">
                                <tree string="Installments" editable="bottom" delete="0">
                                    <field name="date"/>
                                    <field name="month"/>
                                    <field name="year"/>
                                    <field name="amount" readonly="1"/>
                                    <field name="paid" readonly="1" invisible="0"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right" colspan="2">
                                <field name="total_amount" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                                <field name="total_paid_amount" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                                <field name="balance_amount" class="oe_subtotal_footer_separator" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                            </group>
                            <div class="oe_clear"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!--loan search view-->
    <record id="view_advance_loan_request_search_form" model="ir.ui.view">
        <field name="name">hr.advance.loan.search.form</field>
        <field name="model">hr.advance.loan</field>
        <field name="arch" type="xml">
            <search string="Advance Loan">
                <filter string="My Requests" name="myrequest" domain="[('employee_id.user_id.id', '=', uid)]"/>
                <field name="employee_id" string="Employee"/>
                <field name="department_id" string="Department"/>
                <filter string="Employee" name="employee_id" context="{'group_by':'employee_id'}"/>
                <filter string="Department" name="department_id" context="{'group_by':'department_id'}"/>
                <filter string="Status" name="status" context="{'group_by':'state'}"/>
            </search>
        </field>
    </record>


    <!--    &lt;!&ndash;loan menu&ndash;&gt;-->
    <!--    <menuitem name="Loans &amp; Advances"-->
    <!--              id="menu_hr_loans_and_advances" parent="hr_work_entry_contract_enterprise.menu_hr_payroll_root"-->
    <!--              sequence="65"/>-->

    <record id="action_hr_advance_salary_request" model="ir.actions.act_window">
        <field name="name">Request for Advance Salary</field>
        <field name="res_model">hr.advance.loan</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('type', '=', 'ad_sal')]</field>
        <field name="context">{'default_type': 'ad_sal'}</field>
        <field name="search_view_id" ref="view_advance_loan_request_search_form"/>
        <field name="view_id" ref="hr_advance_salary_tree_view"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new Advance Salary request.
            </p>
            <p>
                Use this menu to create advance salary requests.
            </p>
        </field>
    </record>

    <record id="action_hr_advance_loan_request" model="ir.actions.act_window">
        <field name="name">Request for Loan</field>
        <field name="res_model">hr.advance.loan</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('type', '=', 'loan')]</field>
        <field name="context">{'default_type': 'loan'}</field>
        <field name="search_view_id" ref="view_advance_loan_request_search_form"/>
        <field name="view_id" ref="hr_advance_loan_tree_view"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new Loan request.
            </p>
            <p>
                Use this menu to create loan requests.
            </p>
        </field>
    </record>

    <menuitem name="Loans"
              id="root_menu_loan_icon" web_icon="update_payroll_module_baykee,static/description/loan.png"
              sequence="40"/>
    <menuitem name="Advances"
              id="root_menu_advances_icon" web_icon="update_payroll_module_baykee,static/description/advance.png"
              sequence="40"/>

    <menuitem id="menu_loan" name="Loans" action="action_hr_advance_loan_request" parent="root_menu_loan_icon"
              sequence="1"/>
    <menuitem id="menu_advances" name="Advances" action="action_hr_advance_salary_request"
              parent="root_menu_advances_icon"
              sequence="2"/>

    <!-- Shortcuts -->
    <record id="act_hr_employee_advance_loan_request" model="ir.actions.act_window">
        <field name="name">Loans</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.advance.loan</field>
        <field name="binding_model_id" ref="hr.model_hr_employee"/>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_type': 'loan'}</field>
        <field name="view_id" eval="hr_advance_loan_tree_view"/>
    </record>

    <record id="act_hr_employee_advance_salary_request" model="ir.actions.act_window">
        <field name="name">Advance Salary</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.advance.loan</field>
        <field name="binding_model_id" ref="hr.model_hr_employee"/>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_type': 'ad_sal'}</field>
        <field name="view_id" eval="hr_advance_salary_tree_view"/>
    </record>


    <!-- HR employee inherit Loans -->
    <record id="view_employee_form_loan_inherit" model="ir.ui.view">
        <field name="name">hr.employee.loan.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="%(act_hr_employee_advance_loan_request)d"
                        type="action"
                        class="oe_stat_button"
                        icon="fa-calendar">
                    <field name="loan_count" widget="statinfo" string="Loans"/>
                </button>
                <button name="%(act_hr_employee_advance_salary_request)d"
                        type="action"
                        class="oe_stat_button"
                        icon="fa-calendar">
                    <field name="advance_count" widget="statinfo" string="Advances"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
