                <!--                </xpath>-->
                <field name='name' position="attributes">
                    <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
                </field>
                <xpath expr="//field[@name='date_start']"
                       position="attributes">
                    <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
                </xpath>
                <xpath expr="//field[@name='date_end']"
                       position="attributes">
                    <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
                </xpath>
                <!--                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/group[1]/group[1]/field[@name='trial_date_end']"-->
                <!--                       position="attributes">-->
                <!--                    <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>-->
                <!--                </xpath>-->
                <xpath expr="//field[@name='resource_calendar_id']"
                       position="attributes">
                    <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
                    <attribute name="options">{'no_open': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='hr_responsible_id']"
                       position="attributes">
                    <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
                </xpath>
                <xpath expr="//field[@name='wage']"
                       position="attributes">
                    <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
                </xpath>
                <field name="structure_type_id" position="attributes">
                    <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
                    <attribute name="options">{'no_open': True}</attribute>
                </field>
                <field name="notes" position="attributes">
                    <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
                </field>
                <xpath expr="//field[@name='employee_id']" position="attributes">
                    <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
                    <attribute name="options">{'no_open': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='department_id']" position="attributes">
                    <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
                    <attribute name="options">{'no_open': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='job_id']" position="attributes">
                    <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
                    <attribute name="options">{'no_open': True}</attribute>
                </xpath>
                <xpath expr="//page[@name='other']/group[1]" position="after">
                    <group>
                        <group string="Contract Salary">
                            <field name="Basic_salary" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="gross_finals" readonly="1" force_save="True"/>
                            <field name="Net_finals" readonly="1" force_save="True"/>
                        </group>
                        <group string="Salary Allowance">
                            <field name="medical_allowance" force_save="True"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="Allowance_fuel" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="Allowance_house" force_save="True"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="gazette_comp" force_save="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="special_allowance" force_save="1"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="travel_allowance" force_save="1"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group string="Salary Deduction">
                            <field name="deduction_check" attrs="{'readonly': [('state', '!=', 'draft')]}"
                                   widget="radio" options="{'horizontal': true}"/>
                            <field name="Deduction_Tax" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="Deduction_EOBI" widget="radio" options="{'horizontal': true}"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="Deduction_PF" widget="radio" options="{'horizontal': true}"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="Deduction_Advance" force_save="1"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="Deduction_Loan" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="Deduction_MobileBills" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="deduction_late" force_save="1"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="deduction_short_leave" force_save="1"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="deduction_half_leave" force_save="1"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </group>

                </xpath>
