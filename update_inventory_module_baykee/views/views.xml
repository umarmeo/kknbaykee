<odoo>
    <data>
        <record id="view_picking_form_new" model="ir.ui.view">
            <field name="name">stock.picking.form.new</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_edit': True, 'no_open': True}</attribute>
                </field>
                <field name="picking_type_id" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_edit': True, 'no_open': True}</attribute>
                </field>
                <field name="user_id" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_edit': True, 'no_open': True}</attribute>
                </field>
                <field name="location_id" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_edit': True, 'no_open': True}</attribute>
                </field>
                <field name="location_dest_id" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_edit': True, 'no_open': True}</attribute>
                </field>
                <xpath expr="//field[@name='move_ids_without_package']/tree[1]/field[@name='product_id']"
                       position="attributes">
                    <attribute name="options">{'no_create': True, 'no_edit': True, 'no_open': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='move_ids_without_package']/tree[1]/field[@name='lot_ids']"
                       position="attributes">
                    <attribute name="options">{'no_create': True, 'no_edit': True, 'no_open': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='move_ids_without_package']/tree[1]/field[@name='product_uom']"
                       position="attributes">
                    <attribute name="options">{'no_create': True, 'no_edit': True, 'no_open': True}</attribute>
                </xpath>
            </field>
        </record>
        <!--  Inherit Form View to Modify it  -->
        <record id="product_template_only_form_view_inherit" model="ir.ui.view">
            <field name="name">product_template_only_form_view_inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='group_standard_price']/div[@name='pricing']" position="after">
                    <label for="min_sale_price" class="mt-1"/>
                    <div name="min_price">
                        <field name="min_sale_price" class="oe_inline" widget="monetary"
                               options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                        <span class="ml-2"/>
                    </div>
                </xpath>
            </field>
        </record>
        <record id="product_normal_form_view_inherit" model="ir.ui.view">
            <field name="name">product_normal_form_view_inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='group_standard_price']/div[@name='pricing']" position="after">
                    <label for="min_sale_price" class="mt-1"/>
                    <div name="min_price">
                        <field name="min_sale_price" class="oe_inline" widget="monetary"
                               options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                        <span class="ml-2"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>