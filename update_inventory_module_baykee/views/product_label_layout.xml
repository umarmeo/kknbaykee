<odoo>
    <data>
        <record id="view_product_label_layout_inh" model="ir.ui.view">
            <field name="name">product.label.layout.inh</field>
            <field name="model">product.label.layout</field>
            <field name="inherit_id" ref="product.product_label_layout_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/group[1]/group[2]/field[@name='extra_html']" position="attributes">
                    <attribute name="attrs">{'invisible': [('print_format', 'not in', ( '4x12'))]}
                    </attribute>
                </xpath>
                <xpath expr="//form/group[1]/group[1]/field[@name='print_format']" position="attributes">
                    <attribute name="invisible">0</attribute>
                </xpath>
            </field>
        </record>
        <template id="product.report_productlabel_dymo">
            <t t-call="web.html_container">
                <t t-set="barcode_size" t-value="'width:45.5mm;height:4.5mm'"/>
                <t t-set="table_style" t-value="'width:100%;height:32mm;'"/>
                <t t-set="padding_page" t-value="'padding: 2mm'"/>
                <t t-foreach="quantity.items()" t-as="barcode_and_qty_by_product">
                    <t t-set="product" t-value="barcode_and_qty_by_product[0]"/>
                    <t t-foreach="barcode_and_qty_by_product[1]" t-as="barcode_and_qty">
                        <t t-set="barcode" t-value="barcode_and_qty[0]"/>
                        <t t-foreach="range(barcode_and_qty[1])" t-as="qty">
                            <t t-call="product.report_simple_label_dymo"/>
                        </t>
                    </t>
                </t>
            </t>
        </template>
        <template id="product.report_simple_label_dymo">
            <t t-foreach="product.stock_quant_ids" t-as="o">
                <div class="o_label_sheet o_label_dymo" t-att-style="padding_page">
                    <div class="o_label_full" t-att-style="table_style">
                        <div class="o_label_name" style="line-height: 130%;height:3.0em;background-color: transparent;">
                            <b t-if="product.is_product_variant" t-field="product.name" style="font-size:7px;"/>
                            <br/>
                            <span t-if="product.is_product_variant" t-field="product.product_template_variant_value_ids"
                                  style="font-size:5px;"/>

                            <b t-else="" t-field="product.name" style="font-size:7px;"/>
                        </div>
                        <div class="text-left o_label_small_barcode">
                            <t t-if="barcode">
                                <!-- `quiet=0` to remove the left and right margins on the barcode -->
                                <div t-out="barcode" style="padding:0"
                                     t-options="{'widget': 'barcode', 'quiet': 0, 'symbology': 'auto', 'img_style': barcode_size}"/>
                                <div class="text-left o_label_name"
                                     style="line-height: 100%;height:1.5em;background-color: transparent;">
                                    <span t-out="barcode"/>
                                </div>
                            </t>
                            <span t-out="o.lot_id.name" style="font-size:5px;"/>
                        </div>
                        <div class="text-left o_label_left_column">
                            <small class="text-nowrap" t-field="product.default_code"/>
                        </div>
                        <div class="text-right" style="padding: 0 4px;">
                            <t t-if="product.is_product_variant">
                                <b class="o_label_price_small" t-field="product.lst_price" style="font-size:7px;"
                                   t-options="{'widget': 'monetary', 'label_price': True}"/>
                            </t>
                            <t t-else="">
                                <b class="o_label_price_small" t-field="product.list_price" style="font-size:7px;"
                                   t-options="{'widget': 'monetary', 'label_price': True}"/>
                            </t>
                        </div>
                        <div class="text-center o_label_extra_data">
                            <span t-out="extra_html" style="font-size:8px;font-weight:bold;"/>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="product.report_simple_label2x7">
            <t t-set="barcode_size" t-value="'width:33mm;height:12mm'"/>
            <t t-set="table_style" t-value="'width:97mm;height:37.1mm;' + table_style"/>
            <td t-att-style="make_invisible and 'visibility:hidden;'">
                <t t-foreach="product.stock_quant_ids" t-as="o">
                    <div class="o_label_full" t-att-style="table_style">
                        <div class="o_label_name" style="line-height: 150%;height:3.0em;background-color: transparent;">
                            <b t-if="product.is_product_variant" t-field="product.name"/>
                            <br/>
                            <span t-if="product.is_product_variant" t-field="product.product_template_variant_value_ids"
                                  style="font-size:10px;"/>

                            <b t-else="" t-field="product.name"/>
                        </div>
                        <div class="text-center o_label_left_column">
                            <t t-if="barcode">
                                <div t-out="barcode"
                                     t-options="{'widget': 'barcode', 'symbology': 'auto', 'img_style': barcode_size}"/>
                                <span class="text-center" t-out="barcode"/>
                            </t>
                        </div>

                        <div class="o_label_data">
                            <div class="text-left o_label_left_column">
                                <span class="text-nowrap" t-field="product.default_code"/>
                            </div>
                            <div class="text-right" style="line-height:normal;">
                                <t t-if="product.is_product_variant">
                                    <b class="o_label_price" t-field="product.lst_price"
                                       t-options="{'widget': 'monetary', 'label_price': True}"/>
                                </t>
                                <t t-else="">
                                    <b class="o_label_price" t-field="product.list_price"
                                       t-options="{'widget': 'monetary', 'label_price': True}"/>
                                </t>
                                <span t-out="o.lot_id.name" style="font-size:10px;"/>
                            </div>
                            <div class="o_label_clear"></div>
                        </div>
                        <div class="o_label_extra_data text-center">
                            <span t-out="extra_html" style="font-weight:bold;font-size:10px;"/>
                        </div>
                    </div>
                    <br/>
                </t>
                <br/>
            </td>
        </template>
        <template id="product.report_simple_label4x7">
            <t t-set="barcode_size" t-value="'width:33mm;height:8mm'"/>
            <t t-set="table_style" t-value="'width:47mm;height:37.1mm;' + table_style"/>
            <td t-att-style="make_invisible and 'visibility:hidden;'">
                <t t-foreach="product.stock_quant_ids" t-as="o">
                    <div class="o_label_full" t-att-style="table_style">
                        <div class="o_label_name">
                            <b t-if="product.is_product_variant" t-field="product.name"/>
                            <br/>
                            <span t-if="product.is_product_variant" t-field="product.product_template_variant_value_ids"
                                  style="font-size:9px;"/>
                            <b t-else="" t-field="product.name"/>
                        </div>
                        <div class="text-right" style="padding-top:0;padding-bottom:0;font-size:5px;">
                            <t t-if="product.is_product_variant">
                                <strong class="o_label_price_medium" t-field="product.lst_price"
                                        t-options="{'widget': 'monetary', 'label_price': True}"/>
                            </t>
                            <t t-else="">
                                <strong class="o_label_price_medium" t-field="product.list_price"
                                        t-options="{'widget': 'monetary', 'label_price': True}"/>
                            </t>
                        </div>
                        <div class="text-center o_label_small_barcode" style="font-size:5px;">
                            <span class="text-nowrap" t-field="product.default_code"/>
                            <t t-if="barcode">
                                <div t-out="barcode" style="padding:0"
                                     t-options="{'widget': 'barcode', 'symbology': 'auto', 'img_style': barcode_size}"/>
                                <span class="text-center" t-out="barcode"/>
                            </t>
                            <br/>
                            <span t-out="o.lot_id.name" style="font-size:10px;"/>
                        </div>
                        <div>
                            <span t-out="extra_html" style="text-align:center;font-size:9px;"/>
                        </div>
                    </div>
                    <br/>
                </t>
                <br/>
            </td>
        </template>

        <template id="product.report_simple_label4x12">
            <t t-set="barcode_size" t-value="'width:33mm;height:3.5mm'"/>
            <t t-set="table_style" t-value="'width:43mm;height:19mm;' + table_style"/>
            <t t-if="active_model == 'product.product'">
                <td t-att-style="make_invisible and 'visibility:hidden;'">
                    <t t-foreach="product.stock_quant_ids.filtered(lambda tx: tx.available_quantity &gt; 0)" t-as="o">
                        <t t-if="product.stock_quant_ids.lot_id">
                            <div class="o_label_full o_label_small_text" t-att-style="table_style">
                                <div class="o_label_name">
                                    <div class="o_label_name">
                                        <b t-if="product.is_product_variant" t-field="product.name"
                                           style="font-size:9px;"/>
                                        <br/>
                                        <span t-if="product.is_product_variant"
                                              t-field="product.product_template_variant_value_ids"
                                              style="font-size:9px;"/>
                                        <b t-else="" t-field="product.name" style="font-size:9px;"/>
                                    </div>
                                </div>
                                <div class="text-center o_label_small_barcode" style="margin-top:5px;">
                                    <t t-if="barcode">
                                        <div t-out="barcode" style="padding:0"
                                             t-options="{'widget': 'barcode', 'symbology': 'auto', 'img_style': barcode_size}"/>
                                        <span class="text-center" t-out="barcode"/>
                                    </t>
                                    <br/>
                                    <span t-out="o.lot_id.name" style="font-size:5px;"/>
                                    <span t-out="extra_html" style="text-align:center;font-size:5px;"/>
                                </div>
                            </div>
                            <br/>
                        </t>
                        <br/>
                    </t>
                    <t t-if="not product.stock_quant_ids.lot_id">
                        <div class="o_label_full o_label_small_text" t-att-style="table_style">
                            <div class="o_label_name">
                                <div class="o_label_name">
                                    <b t-if="product.is_product_variant" t-field="product.name"
                                       style="font-size:9px;"/>
                                    <br/>
                                    <span t-if="product.is_product_variant"
                                          t-field="product.product_template_variant_value_ids"
                                          style="font-size:9px;"/>
                                    <b t-else="" t-field="product.name" style="font-size:9px;"/>
                                </div>
                            </div>
                            <div class="text-center o_label_small_barcode" style="margin-top:5px;">
                                <t t-if="barcode">
                                    <div t-out="barcode" style="padding:0"
                                         t-options="{'widget': 'barcode', 'symbology': 'auto', 'img_style': barcode_size}"/>
                                    <span class="text-center" t-out="barcode"/>
                                </t>
                                <br/>
                                <span t-out="extra_html" style="text-align:center;font-size:5px;"/>
                            </div>
                        </div>
                        <br/>
                    </t>
                    <br/>
                </td>
            </t>
            <t t-if="active_model == 'product.template'">
                <td t-att-style="make_invisible and 'visibility:hidden;'">
                    <t t-foreach="product.product_variant_id.stock_quant_ids.filtered(lambda tx: tx.available_quantity &gt; 0)"
                       t-as="o">
                        <t t-if="product.product_variant_id.stock_quant_ids.lot_id">
                            <div class="o_label_full o_label_small_text" t-att-style="table_style">
                                <div class="o_label_name">
                                    <div class="o_label_name">
                                        <b t-if="product.is_product_variant" t-field="product.name"
                                           style="font-size:9px;"/>
                                        <br/>
                                        <span t-if="product.is_product_variant"
                                              t-field="product.product_template_variant_value_ids"
                                              style="font-size:9px;"/>
                                        <b t-else="" t-field="product.name" style="font-size:9px;"/>
                                    </div>
                                </div>
                                <div class="text-center o_label_small_barcode" style="margin-top:5px;">
                                    <t t-if="barcode">
                                        <div t-out="barcode" style="padding:0"
                                             t-options="{'widget': 'barcode', 'symbology': 'auto', 'img_style': barcode_size}"/>
                                        <span class="text-center" t-out="barcode"/>
                                    </t>
                                    <br/>
                                    <span t-out="o.lot_id.name" style="font-size:5px;"/>
                                    <span t-out="extra_html" style="text-align:center;font-size:5px;"/>
                                </div>
                            </div>
                            <br/>
                        </t>
                        <br/>
                    </t>
                    <t t-if="not product.product_variant_id.stock_quant_ids.lot_id">
                        <div class="o_label_full o_label_small_text" t-att-style="table_style">
                            <div class="o_label_name">
                                <div class="o_label_name">
                                    <b t-if="product.is_product_variant" t-field="product.name"
                                       style="font-size:9px;"/>
                                    <br/>
                                    <span t-if="product.is_product_variant"
                                          t-field="product.product_template_variant_value_ids"
                                          style="font-size:9px;"/>
                                    <b t-else="" t-field="product.name" style="font-size:9px;"/>
                                </div>
                            </div>
                            <div class="text-center o_label_small_barcode" style="margin-top:5px;">
                                <t t-if="barcode">
                                    <div t-out="barcode" style="padding:0"
                                         t-options="{'widget': 'barcode', 'symbology': 'auto', 'img_style': barcode_size}"/>
                                    <span class="text-center" t-out="barcode"/>
                                </t>
                                <br/>
                                <span t-out="extra_html" style="text-align:center;font-size:5px;"/>
                            </div>
                        </div>
                        <br/>
                    </t>
                    <br/>
                </td>
            </t>
        </template>

        <template id="product.report_productlabel">
            <t t-call="web.html_container">
                <t t-if="columns and rows">
                    <t t-if="columns == 2 and rows == 7">
                        <t t-set="padding_page" t-value="'padding: 14mm 3mm'"/>
                        <t t-set="report_to_call" t-value="'product.report_simple_label2x7'"/>
                    </t>
                    <t t-if="columns == 4 and rows == 7">
                        <t t-set="padding_page" t-value="'padding: 14mm 3mm'"/>
                        <t t-set="report_to_call" t-value="'product.report_simple_label4x7'"/>
                    </t>
                    <t t-if="columns == 4 and rows == 12">
                        <t t-set="padding_page" t-value="'padding: 20mm 8mm'"/>
                        <t t-set="report_to_call" t-value="'product.report_simple_label4x12'"/>
                    </t>
                    <t t-foreach="range(page_numbers)" t-as="page">
                        <div class="o_label_sheet" t-att-style="padding_page">
                            <table class="my-0 table table-sm table-borderless">
                                <t t-foreach="range(rows)" t-as="row">
                                    <tr>
                                        <t t-foreach="range(columns)" t-as="column">
                                            <t t-if="not current_quantity and quantity">
                                                <t t-set="current_data" t-value="quantity.popitem()"/>
                                                <t t-set="product" t-value="current_data[0]"/>
                                                <t t-set="barcode_and_qty" t-value="current_data[1].pop()"/>
                                                <t t-set="barcode" t-value="barcode_and_qty[0]"/>
                                                <t t-set="current_quantity" t-value="barcode_and_qty[1]"/>
                                                <!--                                                <t t-set="lot_id" t-value="current_data[0].pop()"/>-->
                                            </t>
                                            <t t-if="current_quantity">
                                                <t t-set="make_invisible" t-value="False"/>
                                                <t t-set="current_quantity" t-value="current_quantity - 1"/>
                                                <!--                                                <t t-set="lot_id" t-value="current_data[1].pop()"/>-->
                                            </t>
                                            <t t-elif="current_data and current_data[1]">
                                                <t t-set="barcode_and_qty" t-value="current_data[1].pop()"/>
                                                <t t-set="barcode" t-value="barcode_and_qty[0]"/>
                                                <t t-set="current_quantity" t-value="barcode_and_qty[1] - 1"/>
                                                <!--                                                <t t-set="lot_id" t-value="current_data[3].pop()"/>-->
                                            </t>
                                            <t t-else="">
                                                <t t-set="make_invisible" t-value="True"/>
                                            </t>
                                            <t t-set="table_style"
                                               t-value="'border: 1px solid %s;' % (product.env.user.company_id.primary_color or 'black')"/>
                                            <t t-call="{{report_to_call}}"/>
                                        </t>
                                    </tr>
                                </t>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>