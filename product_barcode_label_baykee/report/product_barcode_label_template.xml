<?xml version="1.0" encoding="utf-8"?>
<odoo>+
    <data>
        <template id="product_barcode_label_baykee.product_label_temp">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="article" style="font-size:8px; padding:0; margin:0;" t-att-data-oe-model="o and o._name"
                         t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
                        <t t-foreach="dat" t-as="data_line">
                            <t t-set="barcode_size" t-value="'width:33mm;height:4mm'"/>
                            <table class="table table-bordered" style="width:100%;">
                                <t t-foreach="data_line[0]" t-as="m">
                                    <tr>
                                        <t t-foreach="m" t-as="data">
                                            <td style="text-align:center; width:168.18px; max-width:168.18px; height:71.81px; max-height:71.81px; padding:0px; margin:0px;"
                                                if="data['product'] != False">
                                                <div style="margin: 0 auto;">
                                                    <div class="row" style="margin-top:1px">
                                                        <div class="col-4 text-left">
                                                            <strong t-esc="data['company']" style="font-size:10px; margin-left: 8px;"/>
                                                        </div>
                                                        <div class="col-8 text-right">
                                                            <strong t-esc="data['product']" style="font-size:10px; margin-right: 8px;"/>
                                                        </div>
                                                    </div>
                                                    <div>
                                                        <strong t-if="product_variant != false" t-esc="data['variant']"
                                                                class="text-center"
                                                                style="font-size:10px;"/>
                                                    </div>
                                                    <div>
                                                        <t t-if="data['barcode']">
                                                            <div t-out="data['barcode']"
                                                                 t-options="{'widget': 'barcode', 'symbology': 'auto', 'img_style': barcode_size}"/>
                                                        </t>
                                                    </div>
                                                    <div>
                                                        <span t-if="is_lot_serial == '1'" t-esc="data['serial']"
                                                              class="text-center"/>
                                                        <br/>
                                                        <span t-esc="data['content']" class="text-center"/>
                                                    </div>
                                                </div>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                            </table>
                        </t>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>