<odoo>
    <data>

        <!-- Form View -->
        <record model="ir.ui.view" id="baykee_employee_shift_form_view">
            <field name="name">baykee_employee_shift_form_view</field>
            <field name="model">baykee.employee.shift</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_draft" string="Reset To Draft"
                                class="btn-primary" type="object"
                                states="approved"/>
                        <button name="action_approved" string="Approve" class="btn-primary"
                                type="object"
                                states="draft"/>
                        <button name="action_cancel" string="cancel" class="btn-secondary"
                                type="object"
                                states="draft,hr,coo,approved"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,approved"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="shift_start" widget='float_time'
                                       attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="margin" widget='float_time'
                                       attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="present_end" widget='float_time' readonly="1" force_save="True"/>
                                <field name="shift_duration" attrs="{'readonly': [('state', '!=', 'draft')]}"
                                       force_save="True"/>
                                <field name="shift_end" widget='float_time' readonly="1" force_save="True"/>
                            </group>
                            <group>
                                <field name="late_end" widget='float_time'
                                       attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="short_leave" widget='float_time'
                                       attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="half_leave" widget='float_time'
                                       attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="shift_type" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record model="ir.ui.view" id="baykee_employee_shift_tree_view">
            <field name="name">baykee_employee_shift_tree_view</field>
            <field name="model">baykee.employee.shift</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="shift_start" widget='float_time'/>
                    <field name="margin" widget='float_time'/>
                    <field name="present_end" widget='float_time'/>
                    <field name="late_end" widget='float_time'/>
                    <field name="short_leave" widget='float_time'/>
                    <field name="half_leave" widget='float_time'/>
                    <field name="shift_end" widget='float_time'/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_baykee_employee_shift">
            <field name="name">Shifts</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">baykee.employee.shift</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your new shift for employee's Here!
                </p>
            </field>
        </record>

        <menuitem name="Shifts" id="baykee_employee_shift" parent="hr.menu_human_resources_configuration" sequence="2"
                  action="action_baykee_employee_shift"/>
    </data>
</odoo>