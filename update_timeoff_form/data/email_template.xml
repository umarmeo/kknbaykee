<?xml version="1.0" encoding="utf-8" ?>
<odoo>
<!--    <data noupdate="1">-->
    <data>
       <!--Email template -->
        <record id="employee_manager_leave_approval_hr" model="mail.template">
               <field name="name">Employee Manager Leave Approval HR</field>
               <field name="model_id" ref="update_timeoff_form.model_hr_leave_employee"/>
               <field name="email_from">${object.env.user.login}</field>
               <field name="email_to" >''</field>
               <field name="email_cc" >''</field>
               <field name="subject">Approval Required for Leave ${object.types} - ${object.employee_id.name}</field>
               <field name="body_html" type="html">
                    <div style="margin: 0px; padding: 0px;">
                        <p style="margin: 0px; padding: 0px; font-size: 13px;">
                            % if object.employee_id.ids[0] == object.department_id.manager_id.ids[0]:
                                Dear ${object.employee_id.parent_id.name.upper()},
                            % else:
                                Dear ${object.department_id.manager_id.name.upper()},
                            % endif

                            <br/><br/>
                            Following leave ${object.types} application has been sent to you for approval. Thank you.
                            <br/>
                            Employee Code: ${object.employee_id.barcode}<br/>
                            Employee: ${object.employee_id.name}<br/>
                            Description: ${object.name}<br/>
                            Leave: ${object.leave_type_name}<br/>
                            date_from: ${object.date_from}<br/>
                            date_to: ${object.date_to}<br/>
                            Type: ${object.types}<br/>
                            <br/><br/>
                            <div style="margin: 16px 8px 16px 8px;" class="text-center">
                                <a href="${object.get_portal_url()}"
                                    style="background-color: #875a7b; text-decoration: none; color: #fff; padding: 8px 16px 8px 16px; border-radius: 5px;">View Leave</a>
                            </div>
                            <br/><br/>
                            Best regards,<br/>
                        </p>
                    </div>
               </field>
       </record>
