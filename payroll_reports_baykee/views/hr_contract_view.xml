<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="hr_contract_view_form_inherit_view" model="ir.ui.view">
            <field name="name">hr_contract_view_form_inherit_view</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='Deduction_EOBI']" position="after">
                    <field name="Deduction_EOBI_amount" attrs="{'invisible':[('Deduction_EOBI', '!=', 'yes')]}"/>
                </xpath>
                <xpath expr="//field[@name='Deduction_PF']" position="after">
                    <field name="Deduction_PF_amount" attrs="{'invisible':[('Deduction_PF', '!=', 'yes')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>